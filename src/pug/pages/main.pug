extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-block
		.container.container_indent
			.row
				.col-12
					.top-block__content
						.top-block__main
							.top-block__info.d-none.d-md-block
								.top-block__title Займы в&nbsp;МФО
								.top-block__text
									p Получить деньги без справок и поручителей легко и просто!
									p Дополнительный текст про отделения банка

							form.form-calc
								.form-calc__fields
									.form-calc__item
										.range.js-range
											.range__top
												span.range__title Сумма займа: 
												span.range__val <span class="js-range-val" data-text="руб."></span>
											input(type='text' name='prices' data-provide='slider' data-slider-min='1000' data-slider-max='30000' data-slider-step='1' data-slider-value='5000' data-slider-tooltip="hide" class="js-range-input")

											.range__scale
												.range__min.js-range-min
												.range__max.js-range-max

									.form-calc__item
										.range.js-range(data-note='true')
											.range__top
												span.range__title Срок займа: 
												span.range__val <span class="js-range-val" data-text="день"></span>
											input(type='text' name='days' data-provide='slider' data-slider-min='10' data-slider-max='32' data-slider-step='1' data-slider-value='25' data-slider-tooltip="hide" class="js-range-input" )

											.range__scale
												.range__min.js-range-min
												.range__max.js-range-max

								.form-calc-res
									.form-calc-res__content
										.form-calc-res__label Всего к&nbsp;возврату
										.form-calc-res__price 5170
											span.form-calc-res__currency руб

									.form-calc-res__btn
										input.btn(type="submit", value="Продолжить")

						.contact
							.map-wrap.js-map-wrap
								.map-panel.d-md-none
									.map-panel__content
										.map-panel__icon
											img(src="assets/img/icon-map.svg", alt="")
										.map-panel__text Смотреть на карте
									.map-panel__arr.js-map-panel-arr
										+svg('ic-arrow-down','ic-arrow-down', '14', '8')

								.map-wrap__content.js-map-wrap-content
									#map.map
								script(src='http://api-maps.yandex.ru/2.1/?lang=ru_RU' type='text/javascript')
						
							.contact-list.d-none.d-md-block
								.contact-list__item
									.contact-list__icon
										+svg('ic-address','ic-address', '30', '37')
									.contact-list__content
										.contact-list__label Главный офис:
										.contact-list__text 164522, Архангельская область, г. Северодвинск, ул. Трухинова, д. 6А, пом. 3-Н
								
								.contact-list__item
									.contact-list__icon
										+svg('ic-path','ic-path', '38', '33')
									.contact-list__content
										.contact-list__label Как добраться:
										.contact-list__text
											.contact-path
												span.contact-path__icon
													+svg('ic-bus','ic-bus', '18', '18')
												span.contact-path__text Бульвар Строителей
												span.contact-path__distance
													+svg('ic-person','ic-person', '8', '14')
													|180 м

												span.contact-path__num 4


						.top-block__info.d-md-none
							.top-block__title Займы в&nbsp;Северодвинске
							
	section.branches-wrap
		.container
			.row
				.col-12
					.branches-wrap__content
						.branches-wrap__head
							.h1 Отделения в регионе

							.btn-arr-wrap.js-branches-slider-arr.d-none.d-md-inline-flex

						.branches-slider.js-branches-slider
							-
								var list=[
									{img:'branch2.jpg', title:'г.Северодвинск', index:'164522', address:'Архангельская область, улица Трухинова, дом 6а, пом. 3Н'},
									{img:'branch1.jpg', title:'г. Лиски', index:'397901', address:'Воронежская область, Коммунистическая ул., 5'},
									{img:'branch2.jpg', title:'г. Архангельск', index:'397901', address:'Архангельская область, Советская улица, 44'},
									{img:'branch1.jpg', title:'г. Лиски', index:'397901', address:'Воронежская область, Коммунистическая ул., 5'},
									{img:'branch1.jpg', title:'г. Лиски', index:'397901', address:'Воронежская область, Коммунистическая ул., 5'},
									{img:'branch2.jpg', title:'г. Архангельск', index:'397901', address:'Архангельская область, Советская улица, 44'},
								]

							each item in list
								.branches-slider__item
									.branches-slider__img(style="background-image: url(assets/img/"+item.img+")")
									
									.branches-slider__content
										.branches-slider__city= item.title
										.branches-slider__index= item.index
										.branches-slider__address= item.address

	section.mark-wrap
		.container.container_indent
			.row
				.col-12
					.h1 Рейтинг компании

			.row
				-
					var list=[
						{logo:'ya.jpg', num:'4.7', text:'Оценок : 10'},
						{logo:'zoon.jpg', num:'4.7', text:'Оценок : 10'},
						{logo:'yahoo.jpg', num:'4.7', text:'Оценок : 10'},
					]

				each item in list
					.col-md-6.col-lg-4
						.mark
							.mark__icon
								img(src="assets/img/"+item.logo, alt="")
							.mark__content
								.mark__rating
									.mark__num= item.num 

									.rating
										.rating__content(style="width:76%")

								.mark__text= item.text

	section.product-wrap
		.container
			.row
				.col-12
					.product-wrap__content
						.product-wrap__head
							.h1 Продукты

							.btn-arr-wrap.js-product-slider-arr.d-none.d-md-inline-flex

						.product-slider.js-product-slider
							-
								var list=[
									{img:'product1.jpg', title:'Для новых клиентов', text:'Берите небольшую сумму на короткий срок'},
									{img:'product2.jpg', title:'Для действующих', text:'Берите займы постоянно и получайте лучшие условия'},
									{img:'product3.jpg', title:'Заём под ПТС', text:'Берите до 500 000 рублей под залог авто: ПТС и машина остаются у вас'},
